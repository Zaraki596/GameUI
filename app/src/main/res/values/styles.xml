<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    
    <attr name="textBlockStyle" format="reference"/>


    <style name="Normal_style" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/text_stroke</item>
    </style>


    <!--For correct answer-->
    <style name="Correct_style" parent="AppTheme">
        <item name="android:background">@drawable/text_stroke_success</item>
        <item name="android:textColor">@color/font_icon_green</item>
        <item name="android:drawableEnd">@drawable/ic_right</item>
        <item name="android:paddingEnd">12dp</item>
    </style>


    <!--For wrong answer-->
    <style name="Wrong_style" parent="AppTheme">
        <item name="android:background">@drawable/text_stroke_error</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:drawableEnd">@drawable/ic_wrong</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>
